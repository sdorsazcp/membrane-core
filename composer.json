{
  "name": "membrane/membrane",
  "type": "library",
  "license": "MPL-2.0",
  "autoload": {
    "psr-4": {
      "Membrane\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Membrane\\Tests\\": "tests/",
      "Membrane\\Tests\\Fixtures\\": "tests/fixtures/"
    }
  },
  "require": {
    "php": "^8.1.0",
    "cebe/php-openapi": "^1.7",
    "psr/http-message": "^1.0 || ^2.0",
    "psr/log": "^2.0 || ^3.0",
    "symfony/console": "^7.0",
    "membrane/openapi-reader": "^2.0.0",
    "membrane/openapi-router": "^0.4.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.1",
    "phpstan/phpstan": "^1.10.19",
    "squizlabs/php_codesniffer": "^3.7",
    "guzzlehttp/psr7": "^2.4",
    "mikey179/vfsstream": "^1.6.7"
  },
  "bin": [
    "bin/membrane"
  ],
  "config": {
    "allow-plugins": {
      "infection/extension-installer": true
    }
  }
}
